<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRGJ8HOOdCf3l6EPyaTbiIekER-I5CJs607Kg&usqp=CAU" class="picture">

<div class="container">
  <div class="row">
    <div class="col-sm">
        <form> 
            <div class="mb-3">
                <h3>Enter a Burger </h3>
                <textarea class="form-control" id="burgerType" rows="3"></textarea>
            </div>
            <button type="sumbit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-sm">
        <h3>List of Burgers</h3>
        <ul class="list-group">
            {{#each data}}
            <li class="list-group-item">
                <div>
                    {{this.name}}
                    <button class="btn btn-primary float-end" onClick="eatBurger({{this.id}}">Devour</button>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="col-sm">
        <h3>Devoured Burgers</h3>
        <ul class="list-group">
            {{#each data}}
            <li class="list-group-item">
                <div>
                    {{this.name}}
                    <button class="btn btn-primary float-end" onClick="eatBurger({{this.id}}">Devour</button>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
  </div>
</div>